{% extends 'base.html.twig' %}

{% block title %}Editar Perfil{% endblock %}

{% block page_stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/editar_perfil.css') }}">
{% endblock %}

{% block body %}
    {% include 'header.html.twig' %}

    <div class="edit-container">
        <h1 class="edit-title">Editar Perfil</h1>
        <form method="POST" action="{{ path('editar_datos_usuario') }}" class="perfil-form">
            <div class="form-group">
                <label for="nombre">Nombre:</label>
                <input type="text" id="nombre" name="nombre" value="{{ usuario.nombre }}" required>
            </div>

            <div class="form-group">
                <label for="apellido">Apellido:</label>
                <input type="text" id="apellido" name="apellido" value="{{ usuario.apellido }}" required>
            </div>

            <div class="form-group">
                <label for="dni">DNI:</label>
                <input type="text" id="dni" name="dni" value="{{ usuario.dni }}" required>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn">Guardar Cambios</button>
                <a href="{{ path('ver_datos_usuario') }}" class="btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
{% endblock %}
