{% extends 'base.html.twig' %}

{% block title %}Registrarse{% endblock %}

{% block page_stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block body %}
    <div class="login-container">
        <form class="login-form" action="{{ path('registrar_usuario') }}" method="post">
            <h2 class="title">Registrarse</h2>
          
            <label for="nombre" class="label">Nombre</label>
            <input type="text" class="input" id="nombre" name="nombre" required minlength="1" />

            <label for="apellido" class="label">Apellido</label>
            <input type="text" class="input" id="apellido" name="apellido" required minlength="1" />

            <label for="dni" class="label">DNI</label>
            <input type="text" class="input" id="dni" name="dni" required minlength="7" maxlength="8" pattern="^[0-9]+$" />

            <label for="username" class="label">Email</label>
            <input type="email" class="input" id="username" name="username" required />

            <label for="password" class="label">Contraseña</label>
            <input type="password" class="input" id="password" name="password" required minlength="6" />

            <button class="submit-button" type="submit">Registrarse</button>

            <a class="register" href="{{ path('app_login') }}" class="btn-light">¿Ya tenés una cuenta?</a>
        </form>
    </div>
{% endblock %}
